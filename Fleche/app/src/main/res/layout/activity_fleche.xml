<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imbert.fleche.Fleche">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   android:layout_centerHorizontal="true"
    android:id="@+id/layout_img"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fleche"
        android:src="@drawable/fleche_gauche"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/layout_img"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/gauche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fleche"
        android:text="←"
        />
    <Button
        android:id="@+id/droite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fleche"
        android:text="→"
        />
    </LinearLayout>


</RelativeLayout>
