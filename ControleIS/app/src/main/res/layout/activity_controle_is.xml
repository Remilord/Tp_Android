<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_sombre"
    tools:context="sppfarmco.controleis.ControleIS">

 <View
     android:layout_width="200dp"
     android:layout_margin="15dp"
     android:id="@+id/fond"
     android:background="@color/couleur_verte"
     android:layout_height="200dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rouge"
            android:textColor="@color/grisecriture"
            />
        <EditText
            android:layout_width="50dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/rouge_edt"
            android:inputType="number"
            android:layout_height="50dp" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vert"
            android:textColor="@color/grisecriture"
            />
        <EditText
            android:layout_width="50dp"
            android:id="@+id/vert_edt"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bleu"
            android:textColor="@color/grisecriture"
            />
        <EditText
            android:layout_width="50dp"
            android:id="@+id/bleu_edt"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>
